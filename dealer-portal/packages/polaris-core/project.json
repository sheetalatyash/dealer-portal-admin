{
  "name": "polaris-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/polaris-core/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/polaris-core/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/polaris-core/tsconfig.lib.prod.json"
        },
        "local": {
          "tsConfig": "packages/polaris-core/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/polaris-core/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/polaris-core/package.json"]
      }
    },
    "release": {
      "executor": "nx-release:build-update-publish",
      "options": {
        "libName": "polaris-core"
      }
    }
  }
}
